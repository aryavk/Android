<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.k.blockout.BlockActivity$PlaceholderFragment">

    <!--<Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/start_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="startGame"
        android:id="@+id/start_button"/>
-->

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/game_title_text"
        android:textSize="@dimen/game_title_text_size"
        android:id="@+id/game_title"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/game_title"
        android:gravity="center"
        android:textSize="@dimen/score_text_size"
        android:id="@+id/score_display"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="@string/clear_score_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/score_display"
        android:onClick="clearScore"
        android:id="@+id/clear_score_button"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/clear_score_button"
        android:text="@string/select_avatar_text"
        android:textSize="@dimen/score_text_size"
        android:id="@+id/select_avatar"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_below="@+id/select_avatar"
        android:layout_alignLeft="@+id/select_avatar"
        android:layout_alignStart="@+id/select_avatar"
        android:id="@+id/image_1_avatar"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_below="@+id/select_avatar"
        android:layout_alignRight="@+id/select_avatar"
        android:layout_alignEnd="@+id/select_avatar"
        android:id="@+id/image_2_avatar"/>

</RelativeLayout>
