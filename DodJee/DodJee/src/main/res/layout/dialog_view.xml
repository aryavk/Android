<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/court2"
              android:id="@+id/dialog_bar">

    <TextView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textSize="@dimen/tutorial_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/dialog_title_text"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/tutorial_text_size"
        android:layout_below="@+id/dialog_title_text"
        android:id="@+id/dialog_text"/>

    <ImageView
        android:contentDescription="@string/tutorial_image_text"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_text"
        android:background="@drawable/gameover"
        android:id="@+id/dialog_game_over_image"/>
    
    <ImageView
        android:contentDescription="@string/tutorial_image_text"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_text"
        android:layout_marginTop="100dp"
        android:id="@+id/dialog_image"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/dialog_image"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/dialog_button_bar">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/dialog_play_again_button"
            android:background="@drawable/play_again_wide"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/dialog_play_again_button"
            android:id="@+id/dialog_close_button"
            android:background="@drawable/close_wide"/>

    </RelativeLayout>
</RelativeLayout>